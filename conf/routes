# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /v1/games                   controllers.GameController.getAll
GET     /v1/game/:entryId           controllers.GameController.getById(entryId: Long)

PUT     /v1/game/add                controllers.GameController.add

POST    /v1/edit/:entryId           controllers.GameController.editById(entryId: Long)

DELETE  /v1/game/:entryId           controllers.GameController.deleteById(entryId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
